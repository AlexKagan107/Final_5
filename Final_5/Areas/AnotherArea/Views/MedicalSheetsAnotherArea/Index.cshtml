@model IEnumerable<Final_5.Models.MedicalSheet>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:orange; margin-top:50px">Medical Summary</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr style="font-size:20px; color:orange">
        <th>
           Turn ID
        </th>
        @*<th>
            User ID
        </th>*@
        <th>
            Date of Visit
        </th>
        <th>
            Medical Practice
        </th>
        <th>
            Summary
        </th>
        <th>
            Prescriptions
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="font-size:18px; color:white">
            <td>
                @Html.DisplayFor(modelItem => item.turnId)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.userId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.dateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Turn.practicsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine.medicineName)
            </td>

            @*<td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>*@
