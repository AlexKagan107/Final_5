<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color:lightgoldenrodyellow; width:100%; height: auto;">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @if (Session["userId"] != null)
                {
                    @Html.ActionLink("Hello " + Session["userName"].ToString(), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Welcome", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    <ul class="nav navbar-nav">
                        <li><a href="/Login/Login">LOGIN</a></li>
                        @*<li><a href="/Users/Create">REGISTER </a></li>*@
                    </ul>
                }
            </div>
            @if (Session["permissions"] != null && (Session["permissions"].Equals("1") || Session["permissions"].Equals("3")))
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Create Turn", "Create", "Turn", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("All Turn", "AllUsers", "Turn", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Search User", "search_1", "Serach", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Medical Summary", "allMedicalSheet", "MedicalSheet", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Doctor", "Create", "DateTimeByDoctor", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Send", "Create", "SendData", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Read", "Index", "SendData", new { area = "" }, new { @class = "navbar-brand" })</li>


                    </ul>


                    @if (Session["userId"] != null)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            @*<li><a href="#">Welcome : @Session["userName"]</a></li>*@
                            <li><a href="/Users/Index">ALL USERS</a></li>
                            <li><a href="/Users/Create">REGISTER</a></li>
                            <li><a href="/Login/Logout">LOGOUT</a></li>
                        </ul>
                    }

                </div>
            }
            @if (Session["permissions"] != null && Session["permissions"].Equals("2"))
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Create Turn", "Create", "Turn", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("All User Turn", "Index", "Turn", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Medical Summary", "allMedicalSheet", "MedicalSheet", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Send", "Create", "SendData", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Read", "Index", "SendData", new { area = "" }, new { @class = "navbar-brand" })</li>
                    </ul>


                    @if (Session["userId"] != null)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            @*<li><a href="#">Welcome : @Session["userName"]</a></li>*@
                            <li><a href="/Login/Logout">LOGOUT</a></li>
                        </ul>
                    }


                </div>
            }

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
