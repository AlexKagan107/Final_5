@model Final_5.Models.Turn

@{
    ViewBag.Title = "Edit";
}
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<style>
    #comment {
        width: 450px;
        height: 100px;
    }
</style>
<h2>Edit Turn </h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div clas="form-horizontal" style="margin-left:30%">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.userId)
        @Html.HiddenFor(model => model.practicsName)
        @Html.HiddenFor(model => model.date)
        @Html.HiddenFor(model => model.hour)
        @Html.HiddenFor(model => model.city)

        <hr />
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.userId,"User ID:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.userId, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
                    @Html.ValidationMessageFor(model => model.userId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.date,"Date:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
                    @*<input type="date" class="form-control" name="date" />*@
                    @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.practicsName, "Practice:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("practicsName", null, htmlAttributes: new { @class = "form-control", disabled = "true" })
                    @Html.ValidationMessageFor(model => model.practicsName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.city, "City:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("city", null, htmlAttributes: new { @class = "form-control", disabled = "true" })
                    @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.comment, "Summary:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.comment, new { htmlAttributes = new { @class = "form-control", @rows = 10, @cols = 80, style = "width: 1000px; height: 110px;" } })
                    @Html.ValidationMessageFor(model => model.comment, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.medicineName, "Prescription:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("medicineName", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.practicsName, "", new { @class = "text-danger" })
                </div>
            </div>

            @*<div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>*@

            <div class="form-group" style="margin-left:25%; margin-top:30px">
                <button type="submit" class="btn btn-success btn-lg"> <span class="glyphicon glyphicon-saved"></span> Save </button>
            </div>
        </div>
    </div>
}

@if (Session["userNowId"] == null)
{
    <div style="margin-left:46%">
        <h3> @Html.ActionLink("Back to List", "AllUsers")</h3>
    </div>
}
else
{
    <div style="margin-left:46%">
        <h3>  @Html.ActionLink("Back to List", "Index")</h3>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
