@model Final_5.Models.Turn

@{
    ViewBag.Title = "Create";
}

@*<h2>Create</h2>*@
<div style="margin-top:30px; margin-left:17%">
    <img src="~/Content/Images/slide-one.jpg" style="width:80% ; height:70%" class="img-rounded" alt="Cinque Terre"/>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.userId)
