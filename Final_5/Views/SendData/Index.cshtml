<h3 style="margin-top:40px">History of Messages:</h3>
<table class="table" style="font-size:17px; ">
    <tr>
        <th>
            Sent To
        </th>
        <th>
            Sent From
        </th>

        <th>
            Message
        </th>
        <th>
            Date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderByDescending(x => x.dateInsert))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.toUserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sendData1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateInsert)
            </td>
            <td>
                @Html.ActionLink("Reply", "Edit", new { id = item.Id })
            </td>
        </tr>
    }

</table>