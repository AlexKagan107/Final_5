@model Final_5.Models.SendData

@{
    ViewBag.Title = "Create";
}

@*<h2>Create</h2>*@
<div style="margin-top:20px; margin-left:23%;">
    <img src="~/Content/Images/chatDoc1.jpg" style="width:70% ; height:50%" class="img-rounded" alt="Cinque Terre" />
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>SendData</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("userId", Session["userId"].ToString())
        <div class="form-group">
            <h3 style="margin-left:39%; margin-top:-10px">Write your message here:</h3>
            @*@Html.LabelFor(model => model.sendData1, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-lg-12" style="margin-left:38%;">
                @Html.TextAreaFor(model => model.sendData1, new { @class = "form-control", @rows = 5 })
                @Html.ValidationMessageFor(model => model.sendData1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="margin-left:47%">
                @*<input type="submit" value="Create" class="btn btn-default btn-lg" />*@
                <button type="submit" class="btn btn-success btn-lg">Send  <span class="glyphicon glyphicon-send"></span></button>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
