@model Final_5.Models.DateTimeByDoctor

@{
    ViewBag.Title = "DoctorByBrunche";
}

<div style="margin-top:30px; margin-left:16%;">
    <img src="~/Content/Images/7.jpg" style="width:80% ; height:70%" class="img-rounded" alt="Cinque Terre" />
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @*@Html.HiddenFor(model => model.idDoctor)*@

    <div class="container" style="margin-left:25%">
        <div class="row">
            <div class="form-horizontal">
                @*<h4>Turn</h4>*@
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.city, "Choose City:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("city", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.practicsName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idDoctor, "Choose Doctor ID:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("idDoctor", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.practicsName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.insertDate, "Choose Date:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.insertDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.insertDate, "", new { @class = "text-danger" })
                    </div>
                </div>


                @*<div class="form-group">
                        @Html.LabelFor(model => model.turnId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.turnId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.turnId, "", new { @class = "text-danger" })
                        </div>
                </div>*@

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success"> <span class="glyphicon glyphicon-saved"></span> Save </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<div style="margin-left:38%">
    @Html.ActionLink(" Availability of all Doctors", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
