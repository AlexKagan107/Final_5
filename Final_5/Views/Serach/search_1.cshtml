@model Final_5.Models.SearchUser

@{
    ViewBag.Title = "search";
}

@*<h2>Search userId</h2>*@
<div style="margin-top:30px; margin-left:12%">
    <img src="~/Content/Images/patient1.jpg" style="width:90% ; height:90%" class="img-rounded" alt="Cinque Terre" />
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group"  style="margin-left:27%">
            @Html.LabelFor(model => model.userId,"Search User:", htmlAttributes: new { @class = "control-label col-md-2", @style="font-size:17px" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.userId, new { htmlAttributes = new { @class = "form-control", @placeholder = "User ID Number" } })
                @Html.ValidationMessageFor(model => model.userId, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group" style="margin-left:33%">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-info btn-lg">Search User    <span class="glyphicon glyphicon-search"></span></button>
                @*<input type="submit" value="Create" class="btn btn-default" />*@
            </div>
        </div>
    </div>
}

