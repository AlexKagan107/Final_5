@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    var LoginFinger = function () {
        // debugger
        var data = $("#myForm2").serialize();

        $.ajax({
            type: "Post",
            url: "/Login/loginFinger",
            data: data,
            success: function (response) {
                // debugger
                if (response == "fail") {
                    alert("Login INVALID! Please try again.")
                    window.location.href = "/Login/Login";
                }
                else if (response != "fail") {
                    window.location.href = "/AnotherArea/Home2/Inde2";
                }
            }

        })
    };

    var LoginUser = function () {
        // debugger
        var data = $("#myForm").serialize();

        $.ajax({
            type: "Post",
            url: "/Login/Login",
            data: data,
            success: function (response) {
                // debugger
                if (response == "fail") {
                    alert("Login or Password INVALID! Please try again.")
                    window.location.href = "/Login/Login";
                }
                if (response == "reg_user") {
                    window.location.href = "/Home/Index";
                }
                if (response == "fin_user") {
                    window.location.href = "/AnotherArea/Home2/Inde2";
                }
            }

        })
    }
</script>
