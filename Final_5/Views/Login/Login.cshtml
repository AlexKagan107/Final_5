<div class="panel panel-default" style="width:75%; margin-top:30px; margin-left:-3%; ">

    <div class="col-md-2">
        <form id="myForm2">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                <div class="form-group">
                    <div class="col-md-9">
