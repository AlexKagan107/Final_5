@model Final_5.Models.Users

@{
    ViewBag.Title = "Delete";
}

<h2>Delete This User</h2>

<h3>Are you sure you want to delete this?</h3>
<div style="font-size:17px">
    @*<h4>Users</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID Number:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userId)
        </dd>
        <dt>
            Password:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            FingerPrint:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fileFinger)
        </dd>

        <dt>
            First Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt>
            Last Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            Address:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.address)
        </dd>

        <dt>
            Phone Number:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phone)
        </dd>

        <dt>
            Permission:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.permissions)
        </dd>

        <dt>
            Doctor ID:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Doctor.idDoctor)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-group" style="margin-left:3%">
            @*<input type="submit" value="Delete" class="btn btn-default" />*@ <button type="submit" class="btn btn-danger btn-lg"> Delete User </button> |
            @*<p>*@
                <a class="btn btn-info btn-lg" href="~/Users/Index">View All Users &raquo;</a>
            @*</p>*@
        </div>
    }
</div>

